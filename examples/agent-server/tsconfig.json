{
  "compilerOptions": {
    "strict": true,
    "declaration": true,
    "sourceMap": true,
    "target": "es2022",
    "lib": ["es2022", "dom"],
    "module": "esnext",
    "types": ["node"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "rootDir": "./workflows",
    "outDir": "./.workflows",
    "skipLibCheck": true
  },
  "include": ["workflows/**/*.ts"]
}
